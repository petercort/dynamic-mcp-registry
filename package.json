{
  "name": "dynamic-mcp-registry",
  "version": "1.0.0",
  "description": "A dynamic API based registry for MCP servers that's hosted on Azure API Center",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "start:https": "USE_HTTPS=true node src/index-https.js",
    "dev": "node --watch src/index.js",
    "dev:https": "USE_HTTPS=true node --watch src/index-https.js",
    "generate-certs": "node scripts/generate-certs.js",
    "test": "node --test",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "api",
    "registry",
    "azure",
    "api-center"
  ],
  "author": "Peter Cort",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}